<html lang="en">
 <head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <meta http-equiv="X-UA-Compatible" content="ie=edge">
     <title>Document121</title>
 </head>
 <style>
    body{
          margin: 0;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
          background-color: darkseagreen;
      }
   nav{
          color: aliceblue;
          display: flex;
          justify-content: flex-end;
          flex-direction: row;
          background-color: rgb(66, 66, 66);
          padding-bottom: -25px;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }
      #username{
          color: aliceblue;
          margin-right: 50px;
      }
      .lobtn{
          color: aliceblue;
          font-size: large;
          background-color: rgb(66, 66, 66);
          border: none;
          margin-bottom: 10px;
          margin-right: 12px;
      }
      #lbtn{
          font-size: smaller;
          font-size: medium;
          font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
          text-decoration: none;
          color: aliceblue;
      }
      #head{
          margin-right: 75%;
      }
      .container{
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-direction: column;
            margin-top: 5%;
            background-color: rgba(229, 226, 226, 0.548);
            margin-left: 26%;
            margin-right: 24%;
            padding: 30px 0 30px 20px;
            border-radius: 20px;
        }
        .i1{
            float: left;
        }
        .i2{
            float: right;

        }
        #i3{
            margin-top: 20px;
            margin-left: 50px;
        }

</style>
 <body>
    <nav>
        <h1 id="head">Basic Portal</h1>
        <h3 id="username">Welcome,<%=user.username %></h3>
        <button class="lobtn"><a href="/logout" id="lbtn">Logout</a></button>
    </nav>
    <div class="container">
        <h1>File Download System</h1>
            <% if(data.length > 0) {%>
               <% for(var i=0; i< data.length; i++) {%>
                            <h4><%= data[i].subjectcode %>0<%= data[i].year %> </h4>
                            <% for(var k=0;k< data[i].filepath.length; k++) {%>
                                    <div class="inner">
                                        <div class="i1">
                                            <h5><%= (data[i].filepath[k]).slice(9,(data[i].filepath[k]).length)%></h5>
                                        </div>
                                        <div class="i2">
                                            <form id="i3" action="/download/<%=k%>/<%=data[i]._id%>">
                                                <input type="submit" value="download">
                                            </form>
                                        </div>
                                    </div>
                            <% } %>
                       <% } %>   
               <% } else {%>
                   <h3>No files uploaded to download</h3>
           <% } %>
    </div> 
 </body>
 </html>
